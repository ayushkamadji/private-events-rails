<p id="notice"><%= notice %></p>

<h1>Events</h1>

<h2>Upcoming</h2>
<% if @events.upcoming.any? %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Date</th>
      <th>Host</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @events.upcoming %>
  </tbody>
</table>

<% else %>
No upcoming events..
<% end %>

<br>

<%= link_to 'New Event', new_event_path %>

<h2>Past</h2>
<% if @events.past.any? %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Date</th>
      <th>Host</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @events.past %>
  </tbody>
</table>

<% else %>
No past events..
<% end %>
