<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
  <br>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Back', events_path %>

<h2>Hosting</h2>
<% if @user.hosted_events.any? %>
<p>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Date</th>
        <th>Host</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @user.hosted_events %>
    </tbody>
  </table>
  
  <br>
</p>
<% else %>
No events hosted/hosting yet...
<% end %>

<h2>Attending</h2>
<% if @upcoming_events.any? %>
<p>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Date</th>
        <th>Host</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @upcoming_events %>
    </tbody>
  </table>
  
  <br>
</p>
<% else %>
No reservations yet..
<% end %>

<h2>Attended</h2>
<% if @previous_events.any? %>
<p>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Date</th>
        <th>Host</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @previous_events %>
    </tbody>
  </table>
  
  <br>
</p>
<% else %>
Hasn't attended any events so far..
<% end %>
